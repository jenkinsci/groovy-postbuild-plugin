<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
  <f:entry title="Groovy script:">
  	<j:if test="${descriptor.isSecurityEnabled()}">
      <div class="warning">
        Access to 'hudson', 'build' and 'listener' is disallowed by global config.
      </div>
    </j:if>
    <f:textarea field="groovyScript" />
  </f:entry>

  <f:entry title="${%Additional grrovy classpath}" help="/plugin/groovy-postbuild/classpath-help.html">
    <f:repeatable var="classpath" items="${it.classpath}">
      <f:textbox value="${classpath}" name="path"/>
      <div align="right">
        <f:repeatableDeleteButton />
      </div>
    </f:repeatable>
  </f:entry>

  <f:entry title="If the script fails:" field="behavior">
    <select name="groovypostbuild.groovyPostbuilRecorder.behavior" align="right" >
      <f:option value="0" selected="${instance.behavior == 0}">Do nothing</f:option>
      <f:option value="1" selected="${instance.behavior == 1}">Mark build as unstable</f:option>
      <f:option value="2" selected="${instance.behavior == 2}">Mark build as failed</f:option>
    </select>
  </f:entry>
</j:jelly>
